@model Blog

@{
    ViewData["Title"] = Model.Title;
}

<div class="container" style="height: calc(100vh - 150px); overflow-y: auto;">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card" style="background-color: #f8f9fa; color: #333;">
                @if (!string.IsNullOrEmpty(Model.ProfilePicture))
                {
                    <img src="@Model.ProfilePicture" class="card-img-top img-fluid" style="max-height: 300px; object-fit: cover;" alt="Blog Image">
                }
                <div class="card-body">
                    <h1 class="card-title">@Model.Title</h1>
                    <p class="card-text" style="white-space: pre-wrap;">@Model.Description</p> <!-- Using white-space: pre-wrap to preserve line breaks -->
                    <div class="d-flex justify-content-between mt-4">
                        <button class="btn btn-primary" onclick="window.location.href='@Url.Action("Comment", "Blog", new { id = Model.Id })'">Comment</button>
                        <button class="btn btn-secondary">Like</button>
                        <button class="btn btn-secondary">Share</button>
                    </div>
                </div>
                <div class="card-footer">
                    <p class="text-muted">Author: @Model.Author?.UserName</p>
                    <p class="text-muted">Posts: @Model.Posts?.Count ?? 0</p>
                </div>
            </div>
        </div>
    </div>
</div>
